<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="NoTitle" parent="Theme.AppCompat.NoActionBar"></style>

    <style name="Theme.FullScreen" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Translucent" parent="android:style/Theme.Translucent">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ToolInfoTitles" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#0000FF</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="ToolInfoImages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ToolInfo" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:visibility">gone</item>
    </style>


</resources>
